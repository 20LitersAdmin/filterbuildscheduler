<div class="col-xs-12 col-md-6">
  <h2><%= @registration.event.title %></h2>

  <%= simple_form_for(@registration, url: event_registration_path(@registration.event, @registration), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <% if current_user.can_lead_event?(@registration.event) %>
        <div><%= f.label :leader, 'Registered as Leader' %>
        <%= f.check_box :leader %></div>
      <% end %>
      <%= f.input :guests_registered, required: true, autofocus: true, label: "Total Guests (besides you)" %>
      <%= f.input :accomodations, autofocus: true, as: :text %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn yellow' %>
      <%= link_to 'Cancel Registration', event_registration_path(@registration.event, @registration),
          data: {:confirm => 'Are you sure?'},
          :method => :delete,
          class: 'btn red' %>
    </div>
  <% end %>

  <br>
  <%= link_to "Back", :back %>
</div>
