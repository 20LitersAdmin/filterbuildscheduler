<div id="counts_edit" class="col-xs-12">
  <h3><%= @count.name %></h3>
  <h4>For: <%= @count.tech_names %></h4>
  <h4><%= @context %></h4>
  <h4>Partial_box? <%= @count.partial_box?  %></h4>
  <h4>Partial_loose? <%= @count.partial_loose?  %></h4>
  <h4>User ID: <%= @count.user_id %></h4>
  <%= simple_form_for([@inventory, @count])  do |f| %>
    <%= f.error_notification %>

    <%= f.input :loose_count, input_html: { value: @loose_val} %>
    <div class="row">
      <div class="col-xs-12 right-align expectation">
        <span id="expected_loose_count_parent" class="highlight red empty right-align">
          <%= @expected_msg %>
          <span id="expected_loose_count"><%= @count.loose_count %></span>
        </span>
      </div>
    </div>

    <%= f.input :unopened_boxes_count, label: "Unopened boxes:", input_html: { value: @box_val}  %>
    <div class="row">
      <div class="col-xs-12 right-align expectation">
        <span id="expected_box_count_parent" class="highlight red empty right-align">
          <%= @expected_msg %>
          <span id="expected_box_count"><%= @count.unopened_boxes_count %></span>
        </span>
      </div>
    </div>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.submit "Submit", class: "btn yellow fullwidth" %>
    <% if @inventory.type_for_params == "manual" %>
      <div class="col-xs-12 col-sm-6">
        <%= f.button :submit, name: "partial_loose", value: "Partial Count: Loose", class: "btn blue fullwidth" %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.button :submit, name: "partial_box", value: "Partial Count: Boxes", class: "btn blue fullwidth" %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Back", edit_inventory_path(@inventory), class: "btn yellow empty fullwidth" %>
  <hr class="bar dark-grey">
</div>



<%= render partial: 'shared/calculator'  %>