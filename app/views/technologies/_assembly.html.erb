<% if assembly.item_type == 'Component' %>
  <img src="<%= assembly.item.picture %>" width="120">
<% end %>

<% @materials_ary << assembly.item.material if assembly.item_type == 'Part' && assembly.item&.made_from_materials? %>

<li>
  <%= assembly.item_uid %>: <%= assembly.item.name %> x <%= assembly.quantity %>
</li>


<% if assembly.has_sub_items? %>
  <ul>
    <%= render partial: 'assembly', collection: assembly.sub_assemblies.prioritized %>
  </ul>
<% end %>
