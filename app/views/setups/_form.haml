-# frozen_string_literal: true

.col-md-8.col-md-offset-2.setup-form
  = simple_form_for [@event, @setup] do |f|
    .row
      .col-xs-12
        = f.error_notification
        = f.input :date, as: :string, label: 'Date and time for setup:', input_html: { class: 'datetimepicker', value: time_for_form(f.object.date) }
        = "Setup event created by #{@setup.creator.name}" if @setup.persisted?
    .row
      .col-xs-12
        %h4 Setup crew members attending:
      .col-xs-12
        %table.table.table-striped
          %tbody
            = f.collection_check_boxes :user_ids, @setup_crew_members, :id, :name, label: nil do |u|
              %tr
                %td= u.check_box
                %td= u.object.name


    .row
      .col-xs-6
        = f.submit 'Submit', class: 'btn yellow'
      .col-xs-6
        = link_to 'Cancel', setup_events_path, class: 'btn blue'
