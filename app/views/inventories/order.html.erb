<div class="row" id="inventory_order">
  <div class="col-xs-12">
    <h2><%= @low_counts.count %> items need to be ordered:</h2>
  </div>

  <div class="col-xs-12 admin-div" id="item_admin">
    <div class="col-xs-4">
      <h4>Total order cost:</h4>
    </div>
    <div class="col-xs-4 center">
      <h4>
        <%= "$TTL" %>
      </h4>
    </div>
    <div class="col-xs-4">
      <%= link_to "By Item", "#", class: "btn yellow", id: "item_btn" %>
      
    </div>
  </div>

  <div class="col-xs-12 admin-div" id="supplier_admin">
    <div class="col-xs-4">
      <h4>Total order cost:</h4>
    </div>
    <div class="col-xs-4 center">
      <h4>
        <%= "$TTL" %>
      </h4>
    </div>
    <div class="col-xs-4">
      <%= link_to "By Supplier", "#", class: "btn yellow", id: "supplier_btn" %>
    </div>
  </div>

  <div class="col-xs-12 right-align">
    <a href="#" class="btn blue btn-check" id="check_all">
      <%= fa_stacked_icon "check", base: "square-o" %> <span class="btn-text">all</span>
    </a>
    <a href="#" class="btn blue btn-check" id="uncheck_all">
      <%= fa_stacked_icon "square", base: "square-o" %> <span class="btn-text">all</span>
    </a>
  </div>

  

  <div class="col-xs-12" id="order_item_div">
    <table class="table table-striped table-bordered datatable" id="order_item_tbl">
      <thead>
        <%= render partial: "order_tbl_head" %>
      </thead>
      <tbody>
        <% @field_class = "item_field" %>
        <%= render partial: "order_tbl", collection: @low_counts %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-12" id="order_supplier_div">
    <% @field_class = "supplier_field" %>
    <%= render partial: "order_supplier", collection: @suppliers %>
    <%= render partial: "order_supplier", object: @no_supplier %>
  </div>
</div>  

