<div class="col-md-3 col-sm-4 count-parent" id="<%= 'count_' + count.id.to_s %>">
  <div class="count-div">
    <p class="count-title"><%= count.name %></p>
    <p class="count-tech"><strong>For:</strong> <%= count.tech_names %></p>

    <% if count.user_id == nil %>
      <% if count.partial_box %>
        <%= link_to "Loose Count", edit_inventory_count_path(@inventory, count), class: "btn empty fullwidth" %>
      <% elsif count.partial_loose %>
        <%= link_to "Box Count", edit_inventory_count_path(@inventory, count), class: "btn empty fullwidth" %>
      <% else %>
        <%= link_to @btn_text, edit_inventory_count_path(@inventory, count), class: "btn yellow fullwidth" %>
      <% end %>
    <% else %>
      <p class="current-count">
        <strong>Avail:</strong> <%= count.available %>
      </p>
      <%= link_to "Edit", edit_inventory_count_path(@inventory, count), class: "btn blue fullwidth" %>
    <% end %>
  </div>
  <div class="count-filters">
    <p class="counted" title="<%= if count.user_id != nil then 'true' else 'false' end %>"></p>
    <p class="partial" title="<%= if count.partial_box || count.partial_loose then 'true' else 'false' end %>"></p>
    <p class="techs" title="<%= count.item.technologies.map { |t| t.id }.to_s.gsub('[','').gsub(']','').gsub(' ','')  %>"></p>
  </div>
</div>

