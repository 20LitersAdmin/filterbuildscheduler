<tr>
  <td>
    <% if current_user.is_admin? %>
      <%= link_to count_tbl.name, rails_admin.edit_path(model_name: count_tbl.item.model_name.name, id: count_tbl.item.id) %>
    <% else %>
      <%= count_tbl.name %>
    <% end %>
  </td>
  <td><%= count_tbl.owner %></td>
  <td><%= count_tbl.tech_names_short %></td>
  <td class="center-align"><%= number_with_precision(count_tbl.per_technology.to_f, delimiter: ',', precision: 2, strip_insignificant_zeros: true) %></td>
  <td class="center-align"><%= number_with_delimiter(count_tbl.loose_count, delimiter: ',') %></td>
  <td class="center-align">
    <% if count_tbl.item.only_loose? %>
      -
    <% else %>
      <%= number_with_delimiter(count_tbl.unopened_boxes_count, delimiter: ',') %>
    <% end %>
  </td>
  <td class="center-align">
    <% if count_tbl.item.only_loose? %>
      -
    <% else %>
      <%= number_with_delimiter(count_tbl.box_count, delimiter: ',') %>
    <% end %>
  </td>
  <td class="center-align">
    <%= number_with_delimiter(count_tbl.available, delimiter: ',') %>
  </td>
  <td class="center-align">
    <%= number_with_delimiter(count_tbl.total, delimiter: ',') %>
  </td>
</tr>
