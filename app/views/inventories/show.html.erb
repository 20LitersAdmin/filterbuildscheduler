<div class="col-sm-9">
  <h2><%= @inventory.name %></h2>
</div>
<div class="col-sm-3 match-h2">
  <%= link_to "Edit", edit_inventory_path(@inventory), class: "btn yellow" %>
</div>
<div class="col-xs-12">
  <table class="table">
    <thead>
      <tr>
        <th>Item</th>
        <th>For Tech</th>
        <th class="center-align">Loose Count</th>
        <th class="center-align">Unopened Boxes</th>
        <th class="center-align"># per box</th>
        <th class="center-align">Unopened Count</th>
        <th class="center-align">Available Count</th>
        <th class="center-align">Total Count</th>
      </tr>
    </thead>
    <tbody>
        <%= render partial: "count", collection: @counts %>
    </tbody>
  </table>
</div>
