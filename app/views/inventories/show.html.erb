<div class="col-sm-9">
  <h2><%= @inventory.name %></h2>
</div>
<div class="col-sm-3 match-h2">
  <%= link_to "Edit", edit_inventory_path(@inventory), class: "btn yellow" %>
</div>
<div class="col-xs-12">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Loose Count</th>
        <th>Box Count</th>
      </tr>
    </thead>
    <tbody>
        <%= render partial: "count", collection: @counts %>
    </tbody>
  </table>
</div>
