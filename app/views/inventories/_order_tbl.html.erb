<tr id="<%= order_tbl.id %>">
  <td>
    <% if current_user.is_admin? %>
      <%= link_to order_tbl.name, rails_admin.edit_path(model_name: order_tbl.item.model_name.name, id: order_tbl.item.id) %>
    <% else %>
      <%= order_tbl.name %>
    <% end %>
  </td>
  <td>
    <%= order_tbl.tech_names_short %>
  </td>
  <td>
    <%= human_float(order_tbl.item.per_technology) %>
  </td>
  <td>
    <%= order_tbl.owner %>
  </td>
  <% if @locator == 'item' %>
    <td>
      <% if supplier = order_tbl.item.supplier %>
        <%= link_to supplier.name, rails_admin.edit_path(model_name: supplier.model_name.name, id: supplier.id) %>
      <% elsif order_tbl.item.made_from_materials? %>
        <i>material</i> <%= fa_icon "question-circle", class: 'light-blue', data: { toggle: 'tooltip', placement: 'right'}, title: "Made from #{order_tbl.item.materials.first.name}: #{order_tbl.item.materials.first.supplier&.name}" %>
      <% end %>
    </td>
  <% end %>
  <td class="center-align">
    <%= number_with_delimiter(order_tbl.available, delimiter: ',') %>
  </td>
  <td class="center-align">
    <%= number_with_delimiter(order_tbl.item.minimum_on_hand, delimiter: ',') %>
  </td>
  <td class="center-align">
    <%= number_with_precision( order_tbl.weeks_to_out, precision: 1 ) %>
  </td>
  <td class="center-align">
    <%= number_with_delimiter(order_tbl.item.weeks_to_deliver, delimiter: ',') %>
  </td>
  <td class="item-cost right-align">
    $<span class="item-cost-value"><%= order_tbl.item.price %></span>
  </td>
  <td class="min-order">
    <%= text_field_tag @locator + '_min_order_' + order_tbl.id.to_s, number_with_delimiter(order_tbl.item.min_order, delimiter: ','), class: "min-order-field right-align", min: 0 %>
  </td>

  <td class="order-total right-align">
    $<span class="order-total-amt"><%= number_with_delimiter(order_tbl.item.reorder_total_cost, delimiter: ',')%></span>
  </td>
  <td class="order-check center-align">
    <%= check_box_tag 'checkbox_' + @locator + "_" +  order_tbl.id.to_s, 1, true, class: "order_checkbox" %>
  </td>
</tr>
