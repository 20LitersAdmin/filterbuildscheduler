-# frozen_string_literal: true
%tr
  %td
    = link_to item_tbl.name, history_inventories_path(uid: item_tbl.uid), remote: true, data: { target: '#item_history_modal' }
  %td= item_tbl.uid
  %td
    = item_tbl.supplier&.name unless item_tbl.instance_of?(Component)
  %td.center-align= human_number item_tbl.loose_count
  %td.center-align= human_number item_tbl.box_count
  %td.center-align= human_number item_tbl.quantity_per_box
  %td.center-align= human_number item_tbl.available_count
