<div class="container" id="inventory_index">
  <%= render partial: 'shared/inventory_functions' %>

  <% if @latest.present? %>
    <div class="inv-latest row">
      <div class="col-xs-12">
        <h2>Current Inventory:</h2>
        <div class="row">
          <div class="inventory col-sm-3">
            <h4><%= @latest.name %></h4>
            <p><%= @latest.count_summary %></p>
            <p>
              <strong><%= if @latest.completed_at.present? then "FINALIZED" end %></strong> &nbsp;
            </p>
            <%= link_to "View", inventory_path(@latest), class: "btn yellow" %>
            <% if !@latest.completed_at.present? %>
              <%= link_to "Edit", edit_inventory_path(@latest), class: "btn blue" %>
            <% elsif current_user.is_admin? %>
              <%= link_to "Unlock", edit_inventory_path(@latest, unlock: "true"), class: "btn blue" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @inventories.present? %>
    <div class="inv-previous row">
      <div class="col-xs-12">
        <h2>Past Inventories:</h2>
        <div class="row">
          <%= render @inventories %>
        </div>
      </div>
    </div>
  <% end %>
</div>
