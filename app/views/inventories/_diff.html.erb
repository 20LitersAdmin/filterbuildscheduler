<% if @inventory.type_for_params == "event" %>
  <h3>Source Event: <%= @event.full_title %></h3>
<% else %>
  <h3>Items <%= if @inventory.type_for_params == "shipping" then "shipped" else "received" end %>:</h3>
<% end %>
<table class="table table-striped table-bordered datatable-slim">
  <thead>
    <tr>
      <th data-priority="1">
        <% if @inventory.type_for_params == "event" %>
          Technology
        <% else %>
          Item
        <% end %>
      </th>
      <% if @inventory.type_for_params != "event" %>
        <th data-priority="2">For Tech</th>
      <% end %>
      <th class="center-align" data-priority="1">Loose items
        <% if @inventory.type_for_params == "event" %>
          built
        <% elsif @inventory.type_for_params == "shipping" %>
          shipped
        <% else %>
          received
        <% end %>
      </th>
      <th class="center-align" data-priority="1">
        Boxes
        <% if @inventory.type_for_params == "event" %>
          packed
        <% elsif @inventory.type_for_params == "shipping" %>
          shipped
        <% else %>
          received
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "diff_tbl", collection: @diff_counts %>
  </tbody>
</table>
