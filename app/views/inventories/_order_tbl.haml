-# frozen_string_literal: true
- too_late = order_tbl.weeks_to_deliver > order_tbl.weeks_to_out
%tr{ id: order_tbl.id }
  %td
    - if current_user.is_admin?
      = link_to order_tbl.name, rails_admin.edit_path(model_name: order_tbl.model_name.name, id: order_tbl.id), target: '_blank'
    - else
      = order_tbl.name
  %td
    = order_tbl.uid
  %td.small-text
    - order_tbl.tech_names_short.each do |t|
      = t
      %br
  %td.small-text
    - order_tbl.per_technologies.each do |f|
      = human_float(f)
      %br
  - if @locator == 'item'
    %td.item-supplier.small-text
      - if supplier = order_tbl.supplier
        = link_to supplier.name, rails_admin.edit_path(model_name: supplier.model_name.name, id: supplier.id)
      - elsif order_tbl.made_from_materials?
        %i material
        = icon('fa question-circle', class: 'light-blue', data: { toggle: 'tooltip', placement: 'right' }, title: "Made from #{order_tbl.materials.first.name}: #{order_tbl.materials.first.supplier&.name}")
  %td{ class: "center-align #{'too-late' if too_late}" }
    = human_number(order_tbl.available_count)
  %td{ class: "center-align #{'too-late' if too_late}" }
    = human_number(order_tbl.minimum_on_hand)
  %td{ class: "center-align #{'too-late' if too_late}" }
    = human_float(order_tbl.weeks_to_out)
  %td{ class: "center-align #{'too-late' if too_late}" }
    = human_float(order_tbl.weeks_to_deliver)
  %td.item-cost.right-align
    $
    %span.item-cost-value= order_tbl.price
  %td.ordered-last
    - if order_tbl.last_ordered_at.present?
      #{human_date(order_tbl.last_ordered_at)}: #{human_number(order_tbl.last_ordered_quantity)}
    - else
      n/a
  %td.min-order
    = text_field_tag "#{@locator}_min_order_#{order_tbl.id}", human_number(order_tbl.min_order), class: 'min-order-field right-align', min: 0
  %td.order-total.right-align
    $
    %span.order-total-amt= number_with_delimiter(order_tbl.reorder_total_cost, delimiter: ',')
  %td.order-check.center-align.small-text
    = check_box_tag "checkbox_#{@locator}_#{order_tbl.id}", 1, false, class: 'order_checkbox'
    - if order_tbl.on_order?
      %br
      %i
        Ordered #{human_number(order_tbl.last_ordered_quantity)}
        %br on #{human_date(order_tbl.last_ordered_at)}
