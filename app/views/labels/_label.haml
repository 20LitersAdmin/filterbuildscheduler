-# frozen_string_literal: true

.label-flex
  - picture_url = label.picture.instance_of?(String) ? label.picture : rails_blob_url(label.picture)
  .half.img{ style: "background-image: url(#{picture_url});" }
    = image_tag label.picture
  .half.text
    %p.title= label.name
    %p.bold= label.uid
    - if label.only_loose?
      %p (only loose)
    - else
      %p Qty/box: #{label.quantity_per_box}
    %p.desc= label.description
