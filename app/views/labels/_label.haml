-# frozen_string_literal: true
%table.item-label
  %tr
    %td.td-img{ rowspan: 5 }
      = image_tag label.picture
    %td.td-name{ colspan: 2 }
      %p
        = label.name
  %tr
    %td.td-desc{ colspan: 2 }
      %p
        = label.description
  %tr
    %td.right-border
      %p.bold
        UID
    %td
      %p.bold
        = label.uid
  %tr
    %td.right-border
      %p
        Tech
    %td.td-tech-names
      %p.tiny
        = label.technologies
  %tr
    %td.right-border
      %p
      = 'Qty/box' unless label.only_loose?
    %td
      %p
        = number_with_delimiter(label.quantity_per_box) unless label.only_loose?
