-# frozen_string_literal: true

.label-grid
  - picture_url = label.picture.instance_of?(String) ? label.picture : rails_blob_url(label.picture)
  .img{ style: "background-image: url(#{picture_url});" }
    = image_tag label.picture
  .text
    %p.title= label.name
    %p.bold= label.uid
    - if label.only_loose?
      %p (only loose)
    - else
      %p Qty/#{label.box_type}: #{label.quantity_per_box}
      - if label.box_notes.present?
        %p.small= label.box_notes
  - if label.description.present? || label.box_notes.present?
    .whole
      - if label.description.present?
        %p.small= label.description
