<div class="col-xs-12 col-md-6 col-md-offset-3">
  <h2>Edit Your Profile</h2>

  <%= simple_form_for @user, url: update_user_path(@user.id) do |f| %>
    <%= f.error_notification %>

    <div class="user-form-inputs">
      <%= f.input :fname, required: true, autofocus: true, label: "First Name" %>
      <%= f.input :lname, required: true, autofocus: true, label: "Last Name" %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :phone, required: false, autofocus: true %>
      <% if @user.has_no_password %>
        <%= f.input :password, autocomplete: "off", hint: "You haven't set a password yet, please do so now.", required: false, label_html: {class: "has-error"}, input_html: { class: "has-error" } %>
        <%= f.input :password_confirmation, required: false, label_html: {class: "has-error"}, input_html: { class: "has-error" } %>
      <% else %>
        <%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
      <% end %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn yellow fullwidth' %>
    </div>
  <% end %>

  <%= link_to "Back", :back, class: 'btn blue fullwidth' %>
</div>
