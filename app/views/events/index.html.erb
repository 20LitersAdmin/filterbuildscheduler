<div class="event-index">
  <% if current_user&.admin_or_leader? %>
    <div class="col-xs-12 center admin-div">
      <p>Available functions:</p>
      <%= link_to "Schedue a New Build", new_event_path, class: 'btn yellow' %>
      <% if @cancelled_events.exists? %>
        <%= link_to "Manage Cancelled Events", cancelled_events_path, class: 'btn red' %>
      <% end %>
      <% if current_user.is_admin? && @closed_events.present? %>
        <%= link_to("Manage Closed Events", closed_events_path , class: 'btn blue') %>
      <% end %>
    </div>
  <% end %>
  <div class='container'>
    <div class="event-container">
      <h2 class="heading">Upcoming Builds</h2>
      <% if @events.count > 0 %>
        <%= render partial: 'events/event', collection: @events %>
      <% else %>
        <div class="center-align action-container">
          <h4>No upcoming events.</h4>
          <p>Want to get notified when new build events are available?</p>
          <a href="https://20liters.kindful.com/register/volunteer" target="_blank" class="btn yellow">Join the Email List</a>
        </div>
      <% end %>
    </div>

    <% if @past_events.present? %>
      <div class="event-container">
        <h2 class="heading">Open Builds (report is missing)</h2>
        <%= render partial: 'events/event', collection: @past_events %>
      </div>
    <% else %>
      <div class="event-container">
        <h2 class="heading">Don't just build, lead!</h2>
        <%= render partial: 'events/solicit'  %>
      </div>
    <% end %>
  </div>
</div>
