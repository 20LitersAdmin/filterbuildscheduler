<%= simple_form_for @event do |f| %>
  <%= f.input :title %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :description  %>
  <%= f.association :location %>
  <%= f.association :technology %>
  <%= f.input :min_leaders %>
  <%= f.input :max_leaders %>
  <%= f.input :min_registrations %>
  <%= f.input :max_registrations %>
  <%= f.input :item_goal %>
  <% if @show_advanced %>
    <%= f.input :item_results %>
    Total Registered: <%= @event.total_registered %>
    <%= f.input :attendance  %>
  <% end %>
  <%= f.input :is_private %>
  <%= f.button :submit %>
<% end %>