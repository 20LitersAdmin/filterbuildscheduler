-# frozen_string_literal: true

.container.event-leaders
  .row
    .col-xs-12
      %h1.center-align
        #{@event.full_title} Leaders
      %h4.center-align
        Technology: #{@event.technology.name}
    .col-xs-12
      = link_to 'Go to event', edit_event_path(@event), class: 'btn empty pull-right'
  .row
    .col-xs-12
      %h2 Registered leaders:
    .col-xs-12
      %table#leaders_tbl.datatable.table.table-striped.table-bordered
        %thead
          %tr
            %th Name
            %th Email
            %th Phone
            %th Qualified
            %th Leader Type
            %th
        %tbody= render partial: 'leader', collection: @already_registered_leaders, locals: { already: true }
  .row
    .col-xs-12
      %h2 Other leaders:
    .col-xs-12
      %table#other_leaders_tbl.datatable.table.table-striped.table-bordered
        %thead
          %tr
            %th Name
            %th Email
            %th Phone
            %th Qualified
            %th Leader Type
            %th
        %tbody= render partial: 'leader', collection: @remaining_leaders, locals: { already: false }
