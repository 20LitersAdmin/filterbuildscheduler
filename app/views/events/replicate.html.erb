<div class="container events-replicate">
  <div class="page-header">
    <h1 class="center-align">
      <%= @event.title %>
    </h1>
    <% if @event.is_private %>
      <h4 class="center-align">Private Event</h4>
    <% end %>
    <h4 class="center-align">
      <%= @event.format_time_range %>
    </h4>
  </div>
  <div class="row">
    <h2>Replicate this event:</h2>
    <%= render partial: 'replicate_form' %>
  </div>
</div>


