<tr class="active center-align tr-bordered">
  <td>
    <%= registration.user.name %>
    <span class="list-float-right">
      <%= icon 'far', 'square' %>
    </span>
    </td>
  <td><%= registration.user.email %></td>
  <td></td>
  <td>
    <% if registration.user.signed_waiver_on %>
      Electronically signed on <%= registration.user.signed_waiver_on.strftime("%m/%-d/%y") %>
    <% end %>
  </td>
  <td class="center-align">
    <%= icon 'far', 'square' %>
  </td>
</tr>
<% registration.guests_registered.times do %>
  <tr>
    <td>Guest Name:</td>
    <td class="right-align">Relationship:</td>
    <td class="right-align">Email: <sub>(optional)</sub></td>
    <td></td>
    <td class="center-align">
      <%= icon 'far', 'square' %>
    </td>
  </tr>
<% end %>
